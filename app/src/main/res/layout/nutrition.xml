<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_marginTop="20dp">
    <TextView
            android:id="@+id/nutritional_reference"
            android:layout_width="190dp"
            android:layout_height="21dp"
            android:text="@string/title_nutrition"
            app:layout_constraintLeft_toLeftOf="@id/margin_start"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <View
            android:id="@+id/circle_fat"
            android:background="@drawable/circle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toLeftOf="@id/margin_start"
            app:layout_constraintTop_toTopOf="@+id/fat"
            app:layout_constraintBottom_toBottomOf="@+id/fat_level"/>

    <TextView
            android:id="@+id/fat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.8g de matières grasses / Lipides"
            app:layout_constraintTop_toBottomOf="@id/nutritional_reference"
            app:layout_constraintLeft_toRightOf="@id/circle_fat"
            android:layout_marginTop="36dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>

    <TextView
            android:id="@+id/fat_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="en faible quantité"
            app:layout_constraintTop_toBottomOf="@id/fat"
            app:layout_constraintLeft_toRightOf="@id/circle_fat"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>

    <View
            android:id="@+id/circle_fattyAcid"
            android:background="@drawable/circle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toLeftOf="@id/margin_start"
            app:layout_constraintTop_toTopOf="@+id/fatty_acide"
            app:layout_constraintBottom_toBottomOf="@+id/fatty_acide_level"/>

    <TextView
            android:id="@+id/fatty_acide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.1g d'acide gras saturé"
            app:layout_constraintTop_toBottomOf="@id/fat_level"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/circle_fattyAcid"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
    />

    <TextView
            android:id="@+id/fatty_acide_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="en faible quantité"
            app:layout_constraintTop_toBottomOf="@id/fatty_acide"
            app:layout_constraintLeft_toRightOf="@id/circle_fattyAcid"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>

    <View
            android:id="@+id/circle_sugar"
            android:background="@drawable/circle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toLeftOf="@id/margin_start"
            app:layout_constraintTop_toTopOf="@+id/sugar"
            app:layout_constraintBottom_toBottomOf="@+id/sugar_level"/>

    <TextView
            android:id="@+id/sugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.2g de sucre"
            app:layout_constraintTop_toBottomOf="@id/fatty_acide_level"
            app:layout_constraintLeft_toRightOf="@id/circle_sugar"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"/>

    <TextView
            android:id="@+id/sugar_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="en quantité modérée"
            app:layout_constraintTop_toBottomOf="@id/sugar"
            app:layout_constraintLeft_toRightOf="@id/circle_sugar"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>

    <View
            android:id="@+id/circle_salt"
            android:background="@drawable/circle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toLeftOf="@id/margin_start"
            app:layout_constraintTop_toTopOf="@+id/salt"
            app:layout_constraintBottom_toBottomOf="@+id/salt_level"/>

    <TextView
            android:id="@+id/salt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.75g de Sel"
            app:layout_constraintTop_toBottomOf="@id/sugar_level"
            app:layout_constraintLeft_toRightOf="@id/circle_salt"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"/>

    <TextView
            android:id="@+id/salt_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="en quantité modérée"
            app:layout_constraintTop_toBottomOf="@id/salt"
            app:layout_constraintLeft_toRightOf="@id/circle_salt"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/margin_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>